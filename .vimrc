syntax on

set noerrorbells
set nu
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap
set smartcase
set noswapfile
set nobackup
set undodir=~/.vim/undodir
set undofile
set incsearch
set mouse=a
set list
set listchars=trail:-,tab:>-

set colorcolumn=80
highlight ColorColumn ctermbg=0 guibg=lightgrey

colorscheme darkblue

set backspace=indent,eol,start
set formatoptions=r
